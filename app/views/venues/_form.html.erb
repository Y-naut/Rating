<%= simple_form_for @venue, :html => { :multipart => true}  do |f| %>
<%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a category") %>
	<%= f.file_field :venue_img %>
	<%= f.input :title, label: "Venue Title" %>
	<%= f.input :description %>
	<%= f.input :address%>
	<%= f.button :submit %>
<% end %>